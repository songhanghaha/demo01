<!--pages/login/login.wxml-->
<view class='container'>

  <form bindsubmit="formSubmit">
    <view class='section'>
      <text>账号:</text>
      <input type='text' placeholder='账号' name="account"  value="{{account}}" />
    </view>
    <view class='section'>
      <text>密码:</text>
      <input type='password' placeholder='密码' name="pwd" value="{{pwd}}"  />
    </view>
    <view class='section'>
      <text>确认密码:</text>
      <input type='password' placeholder='确认密码' name="repwd"  value="{{repwd}}"/>
    </view>
    <view class='button'>
      <button type='primary' form-type='submit'>绑定</button>
    </view>
  </form>
</view>