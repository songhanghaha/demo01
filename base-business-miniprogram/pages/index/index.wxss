/**index.wxss**/
page{
    background: #f0f0f0;
}

.clear{
    clear: both;
}


.slide-image{
width: 100% ;
height: 100% ;
overflow: hidden;
}


.section{
    margin-top: 15px;
}

.flex-item{
width: 33.3%;
height: 113px;
border-bottom: 1px solid #f0f0f0;
border-right: 1px solid #f0f0f0;
padding: 30px 0;
float:left;
box-sizing: border-box;
background: #fff;
position: relative;
overflow: hidden;
}

.flex-item image{
    width: 25px;
    height: 25px;
    margin: 0 auto 10px;
    display: block;
}

.flex-item text{
    font-size: 15px;
    text-align: center;
    display: block;
    color: #333;
}

.flex-title{
    margin: 15px 0 15px 2%;
    height: 24px;

}
.flex-title image{
    width: 13px;
    height: 15px;
    float: left;
    margin: 5px 5px 0 0;
}

.flex-title text{
    font-size: 15px;
    color: #333;
    line-height: 26px;
}

.flex-fenlei{
    width: 47%;
    background: #fff;
    float: left;
    margin-left: 2%;
}

.flex-fenlei image{
    width: 100%;
    height: 195px;
}

.flex-fenlei .fenlei_title{
    font-size: 15px;
    text-align: center;
    color: #333;
    padding: 10px 0;
}

.flex-fenlei .fenlei_xx{
    width: 95%;
    margin: 0 auto;
    color: #fa7000;
    font-size: 12px;
    padding: 10px 0;
    border-top: 1px solid #f0f0f0;
}

.fenlei_xj{
    float: left;
    text-decoration: line-through;
    color: #999;
    margin-right: 5px;
}

.fenlei_ys{
    float: right;
    color: #999;
}

.flex-item .new{
    padding: 0px 20px;
    color: #fff;
    background: red;
    position: absolute;
    font-size: 12px;
    top:8px;
    right: -15px;
    transform: rotate(45deg);
    font-weight: bold;
}